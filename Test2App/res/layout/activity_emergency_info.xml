<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <TableRow
        android:id="@+id/e_tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_color_blue" >
        
        <TextView
            android:id="@+id/emergencyInfoHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/emergency_info_header"
            android:textSize="@dimen/font_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

    </TableRow>
    
    <TableRow
        android:id="@+id/e_tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/MostCommonEmergenciesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/most_common_emergencies"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />
        
	</TableRow>
	<TableRow 
	    android:id="@+id/e_tableRow3"
	    android:layout_gravity="center"
	    android:layout_margin="15dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">

	    <Button
	        android:id="@+id/button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:layout_weight="2"
	        android:background="@drawable/active_shooter"
	        android:maxHeight="20dp"
	        android:maxWidth="20dp" />

	    <Button
	        android:id="@+id/button2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:background="@drawable/earthquake"
	        android:gravity="center"
	        android:maxHeight="20dip"
	        android:maxWidth="20dip" />
	    
	</TableRow>    
    <TableRow 
        android:id="@+id/e_tableRow4"
        android:layout_gravity="center">
            <TextView
                android:id="@+id/OtherEmergenciesTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            android:padding="@dimen/activity_vertical_margin"
	            android:text="@string/other_emergencies"
	            android:textColor="@color/white"
	            android:textSize="@dimen/button_text_size"
	            android:textStyle="bold"/>
      </TableRow>
 
  
    <!-- Other emergencies -->
   
       
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="180dip"
	    >
        
	    <TableLayout android:layout_gravity="center" 
	        android:layout_width="match_parent" android:layout_height="wrap_content"
	        android:stretchColumns="0,3">
	        
	      
	        
	        <TableRow 
	            android:id="@+id/e_tableRow5"
	            android:layout_gravity="center">
	            <TextView />
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/bomb_threat" />
	            
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical" 
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/evacuation" />
	            
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical" 
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/hazardous_material" />
	            <TextView />
	        </TableRow>
	
	        <TableRow 
	            android:id="@+id/e_tableRow6"
	            android:layout_gravity="center">
	            <TextView />
	            <Button 
	                android:layout_margin="15dp"
					android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/violence" />
	            
	            <Button 
	                android:layout_margin="15dp"
					android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/evacuation_disabilities" />
	            
	            <Button 
	                android:layout_margin="15dp"
					android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/hazardous_material_shelter" />
	            <TextView />
	        </TableRow>
	
	        <TableRow 
	            android:id="@+id/e_tableRow7"
	            android:layout_gravity="center">
	            <TextView />
                <Button 
                    android:layout_margin="15dp"
                	android:layout_gravity="center_vertical"
                	android:maxWidth="20dip" 
	                android:maxHeight="20dip"
                	android:background="@drawable/medical_emergency" />
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/utility_failure" />
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/suspicious_package" />
	            
	            <TextView />
	        </TableRow>
	    </TableLayout>
	
	</ScrollView>

	<include
	    android:layout_height="wrap_content"
	    layout="@layout/commonfooter" />

</TableLayout>
