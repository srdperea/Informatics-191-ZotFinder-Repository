    <TableRow 
        android:id="@+id/e_tableRow4"
        android:layout_gravity="center">
            <TextView
                android:id="@+id/OtherEmergenciesTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            android:padding="@dimen/activity_vertical_margin"
	            android:text="@string/other_emergencies"
	            android:textColor="@color/white"
	            android:textSize="@dimen/button_text_size"
	            android:textStyle="bold"/>
      </TableRow>
 
  
    <!-- Other emergencies -->
   
       
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="180dip"
	    android:background="@color/holo_dark">
        
	    <TableLayout android:layout_gravity="center" 
	        android:layout_width="match_parent" android:layout_height="wrap_content"
	        android:stretchColumns="0,3">
	        
	      
	        
	        <TableRow 
	            android:id="@+id/e_tableRow5"
	            android:layout_gravity="center">
	            <TextView />
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/bomb_threat"
	                android:onClick="goToBombThreat" />
	            
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical" 
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/evacuation"
	                android:onClick="goToEvacuation" />
	            
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical" 
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/hazardous_material"
	                android:onClick="goToHazardousMaterial" />
	            	
	            <TextView />
	        </TableRow>
	
	        <TableRow 
	            android:id="@+id/e_tableRow6"
	            android:layout_gravity="center">
	            <TextView />
	            <Button 
	                android:layout_margin="15dp"
					android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/violence"
	                android:onClick="goToViolence"/>
	            
	            <Button 
	                android:layout_margin="15dp"
					android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/evacuation_disabilities"
	                android:onClick="goToEvacuationDisabilities" />
	            
	            <Button 
	                android:layout_margin="15dp"
					android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/hazardous_material_shelter"
	                android:onClick="goToHazardousMaterialShelter" />
	            <TextView />
	        </TableRow>
	
	        <TableRow 
	            android:id="@+id/e_tableRow7"
	            android:layout_gravity="center">
	            <TextView />
                <Button 
                    android:layout_margin="15dp"
                	android:layout_gravity="center_vertical"
                	android:maxWidth="20dip" 
	                android:maxHeight="20dip"
                	android:background="@drawable/medical_emergency" 
                	android:onClick="goToMedicalEmergency"/>
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/utility_failure"
	                android:onClick="goToPowerOutage" />
	            <Button 
	                android:layout_margin="15dp"
	                android:layout_gravity="center_vertical"
	                android:maxWidth="20dip" 
	                android:maxHeight="20dip"
	                android:background="@drawable/suspicious_package"
	                android:onClick="goToSuspiciousPackage" />
	            
	            <TextView />
	        </TableRow>
	    </TableLayout>
	
	</ScrollView>

	<include
	    android:layout_height="match_parent"
	    layout="@layout/commonfooter" />

</TableLayout>
