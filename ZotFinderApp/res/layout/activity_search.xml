<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/holo_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
     <include
	        layout="@layout/commonfooter" />
    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:background="@color/header_color_blue" >
	        
        	<ImageButton 
	            android:id="@+id/backButton"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="3dp"
				android:padding="1dp"
				android:gravity="center_horizontal"
		        android:text="@string/back_button"
		        android:textSize="12sp"
		        android:textStyle="bold"
		        android:background="@android:color/transparent"
		        android:src="@drawable/ic_action_previous_item"
		        android:onClick="finishActivity"
	                />

	       <TextView
	            android:id="@+id/mapHeaderTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/search_header"
	            android:textSize="@dimen/font_size"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="@color/white"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            android:layout_marginBottom="3dp"/>
      </TableRow>
	       
       	    <!-- This is the button for formatting and Toggling -->
   	    <Button 
   	       android:id="@+id/transparent_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:background="@drawable/map_icon_pressed"
           android:alpha="0"
           android:textColor="@color/white"
           android:textSize="@dimen/button_text_size"
   	       android:onClick="goToMap" />
    
	
	
   
   
       <Button
	        android:id="@+id/personTab"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tableRow1"
	        android:layout_marginTop="25dp"
	        android:layout_toLeftOf="@+id/buildingTab"
	        android:onClick="choosePersonSearch"
	        android:text="Person" />
	
	    <Button
	        android:id="@+id/buildingTab"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tableRow1"
	        android:layout_marginTop="25dp"
	        android:layout_centerHorizontal="true"
	        android:onClick="chooseBuildingSearch"
	        android:text="Building" />
	
	    <Button
	        android:id="@+id/departmentTab"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/buildingTab"
	        android:layout_below="@+id/tableRow1"
	        android:layout_marginTop="25dp"
	        android:onClick="chooseDepartmentSearch"
	        android:text="Department" />
	    
	    <Button
	        android:id="@+id/serviceTab"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/serviceTab"
	        android:layout_below="@+id/tableRow1"
	        android:layout_marginTop="25dp"
	        android:onClick="chooseServicesSearch"
	        android:text="Service" />
	    
	    <LinearLayout
		    android:id="@+id/searchBoxLayout"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/buildingTab">

		<EditText
			android:id="@+id/searchText"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:inputType="text"
			android:imeOptions="actionGo"
			android:hint="Enter Person, Bldg, Dpt, or Service"/>
	
		<Button
			android:id="@+id/searchButton"
			android:text="Search"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="search"/>

	</LinearLayout>
        
	 <ListView
		android:id="@android:id/list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/searchBoxLayout"
		android:layout_above="@+id/transparent_button"/>
	 
</RelativeLayout>
	


